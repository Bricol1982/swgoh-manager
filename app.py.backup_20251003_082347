# ==================== API HELPERS ====================

import cloudscraper
from bs4 import BeautifulSoup
import re

def fetch_player_data(ally_code):
    """R√©cup√®re les donn√©es du joueur via SWGOH.gg avec cloudscraper"""
    try:
        clean_code = ally_code.replace('-', '').strip()
        print(f"\n{'='*60}")
        print(f"üîç R√©cup√©ration des donn√©es pour: {clean_code}")
        print(f"{'='*60}")
        
        # Cr√©ation du scraper cloudflare
        scraper = cloudscraper.create_scraper(
            browser={
                'browser': 'chrome',
                'platform': 'windows',
                'mobile': False
            }
        )
        
        # URL du profil
        profile_url = f"https://swgoh.gg/p/{clean_code}/"
        print(f"üì° URL: {profile_url}")
        
        # R√©cup√©ration de la page
        response = scraper.get(profile_url, timeout=20)
        
        if response.status_code != 200:
            print(f"‚ö†Ô∏è  Erreur HTTP {response.status_code}")
            print("üìä Utilisation des donn√©es de d√©monstration")
            return generate_demo_data(clean_code)
        
        print("‚úÖ Page r√©cup√©r√©e avec succ√®s")
        
        # Parse la page avec BeautifulSoup
        soup = BeautifulSoup(response.text, 'html.parser')
        
        # === EXTRACTION DU NOM DU JOUEUR ===
        player_name = "Unknown Player"
        name_elem = soup.find('h5', class_='pull-left')
        if name_elem:
            player_name = name_elem.get_text(strip=True)
            print(f"üë§ Joueur: {player_name}")
        
        # === EXTRACTION DE LA GUILDE ===
        guild_name = "No Guild"
        guild_elem = soup.find('a', href=re.compile(r'/g/'))
        if guild_elem:
            guild_name = guild_elem.get_text(strip=True)
            print(f"üè∞ Guilde: {guild_name}")
        
        # === EXTRACTION DU GALACTIC POWER ===
        gp_total = 0
        gp_char = 0
        gp_ship = 0
        
        # M√©thode 1 : via les divs profile-stat
        stats_divs = soup.find_all('div', class_='profile-stat')
        for stat_div in stats_divs:
            label_div = stat_div.find('div', class_='stat-label')
            value_div = stat_div.find('div', class_='stat-value')
            
            if label_div and value_div:
                label_text = label_div.get_text(strip=True).lower()
                value_text = value_div.get_text(strip=True).replace(',', '').replace(' ', '')
                
                try:
                    value_int = int(re.sub(r'[^\d]', '', value_text))
                    
                    if 'galactic power' in label_text:
                        if 'character' in label_text:
                            gp_char = value_int
                        elif 'ship' in label_text:
                            gp_ship = value_int
                        else:
                            gp_total = value_int
                except (ValueError, AttributeError):
                    pass
        
        # Si pas trouv√©, calculer le total
        if gp_total == 0 and (gp_char > 0 or gp_ship > 0):
            gp_total = gp_char + gp_ship
        
        print(f"‚ö° GP Total: {gp_total:,}")
        print(f"üë• GP Personnages: {gp_char:,}")
        print(f"üöÄ GP Vaisseaux: {gp_ship:,}")
        
        # === R√âCUP√âRATION DU ROSTER ===
        print(f"\nüìã R√©cup√©ration du roster de personnages...")
        roster_url = f"https://swgoh.gg/p/{clean_code}/characters/"
        roster_response = scraper.get(roster_url, timeout=20)
        
        roster = []
        if roster_response.status_code == 200:
            print("‚úÖ Page roster r√©cup√©r√©e")
            roster = parse_character_roster(roster_response.text)
            print(f"‚úÖ {len(roster)} personnages extraits")
        else:
            print(f"‚ö†Ô∏è  Impossible de r√©cup√©rer le roster (HTTP {roster_response.status_code})")
        
        print(f"{'='*60}\n")
        
        # Retour au format attendu
        return {
            'data': {
                'name': player_name,
                'level': 85,
                'guild_name': guild_name,
                'ally_code': clean_code,
                'galactic_power': gp_total,
                'character_galactic_power': gp_char,
                'ship_galactic_power': gp_ship,
                'roster': roster
            }
        }
        
    except Exception as e:
        print(f"‚ùå Erreur lors du scraping: {str(e)}")
        import traceback
        traceback.print_exc()
        print("üìä Utilisation des donn√©es de d√©monstration")
        return generate_demo_data(ally_code.replace('-', ''))

def parse_character_roster(html):
    """Parse le roster de personnages depuis la page HTML"""
    soup = BeautifulSoup(html, 'html.parser')
    roster = []
    
    try:
        # === M√âTHODE 1 : Extraction du JSON embarqu√© ===
        scripts = soup.find_all('script')
        for script in scripts:
            if script.string and 'unitsList' in script.string:
                try:
                    # Recherche du pattern JavaScript
                    match = re.search(r'unitsList\s*=\s*(\[.*?\]);', script.string, re.DOTALL)
                    if match:
                        units_data = json.loads(match.group(1))
                        print(f"üì¶ Donn√©es JSON trouv√©es: {len(units_data)} unit√©s")
                        
                        for unit in units_data:
                            # Filtrer uniquement les personnages (combat_type = 1)
                            if unit.get('combat_type') == 1:
                                # Ajustement du relic tier (le jeu utilise 3-9, on veut 1-7)
                                raw_relic = unit.get('relic_tier', 0)
                                adjusted_relic = max(0, raw_relic - 2) if raw_relic > 2 else 0
                                
                                character = {
                                    'base_id': unit.get('base_id', ''),
                                    'name': unit.get('name', 'Unknown'),
                                    'level': unit.get('level', 85),
                                    'gear_level': unit.get('gear_level', 1),
                                    'relic_tier': adjusted_relic,
                                    'power': unit.get('power', 0),
                                    'galactic_power': unit.get('power', 0),
                                    'combat_type': 1,
                                    'has_ultimate': unit.get('has_ultimate', False),
                                    'mods': []
                                }
                                roster.append(character)
                        
                        if roster:
                            print(f"‚úÖ Extraction JSON r√©ussie: {len(roster)} personnages")
                            return roster
                        
                except json.JSONDecodeError as e:
                    print(f"‚ö†Ô∏è  Erreur d√©codage JSON: {e}")
                except Exception as e:
                    print(f"‚ö†Ô∏è  Erreur extraction JSON: {e}")
        
        # === M√âTHODE 2 : Parsing HTML (fallback) ===
        print("‚ÑπÔ∏è  Passage au parsing HTML...")
        
        # Recherche des cartes de personnages
        char_cards = soup.find_all('div', class_='collection-char')
        print(f"üîç {len(char_cards)} cartes trouv√©es")
        
        for card in char_cards:
            try:
                character = parse_character_card(card)
                if character and character.get('name') != 'Unknown':
                    roster.append(character)
            except Exception as e:
                continue
        
        if roster:
            print(f"‚úÖ Extraction HTML r√©ussie: {len(roster)} personnages")
        else:
            print("‚ö†Ô∏è  Aucun personnage extrait")
        
    except Exception as e:
        print(f"‚ùå Erreur parsing roster: {str(e)}")
        import traceback
        traceback.print_exc()
    
    return roster

def parse_character_card(card):
    """Parse une carte de personnage HTML"""
    try:
        # Nom du personnage
        name_elem = card.find('div', class_='char-name')
        if not name_elem:
            name_elem = card.find('a')
        name = name_elem.get_text(strip=True) if name_elem else "Unknown"
        
        # Base ID depuis le lien
        base_id = ""
        link = card.find('a')
        if link and 'href' in link.attrs:
            href = link['href']
            match = re.search(r'/characters/([^/]+)/', href)
            if match:
                base_id = match.group(1).upper().replace('-', '')
        
        if not base_id:
            base_id = name.upper().replace(' ', '').replace('-', '')
        
        # Gear Level
        gear_level = 1
        gear_elem = card.find('div', class_='char-gearing')
        if gear_elem:
            gear_text = gear_elem.get_text(strip=True)
            gear_match = re.search(r'(\d+)', gear_text)
            if gear_match:
                gear_level = int(gear_match.group(1))
        
        # Relic Tier
        relic_tier = 0
        relic_elem = card.find('div', class_='char-relic')
        if relic_elem:
            relic_text = relic_elem.get_text(strip=True)
            relic_match = re.search(r'(\d+)', relic_text)
            if relic_match:
                relic_tier = int(relic_match.group(1))
        
        # Power / GP
        power = 0
        power_elem = card.find('div', class_='char-power')
        if power_elem:
            power_text = power_elem.get_text(strip=True).replace(',', '')
            power_match = re.search(r'(\d+)', power_text)
            if power_match:
                power = int(power_match.group(1))
        
        # Level (d√©faut 85)
        level = 85
        level_elem = card.find('div', class_='char-level')
        if level_elem:
            level_match = re.search(r'(\d+)', level_elem.get_text(strip=True))
            if level_match:
                level = int(level_match.group(1))
        
        return {
            'base_id': base_id,
            'name': name,
            'level': level,
            'gear_level': gear_level,
            'relic_tier': relic_tier,
            'power': power,
            'galactic_power': power,
            'combat_type': 1,
            'has_ultimate': False,
            'mods': []
        }
        
    except Exception as e:
        return None

